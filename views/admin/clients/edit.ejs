<%- bootstrap.breadcrumb(['Clients', '/admin/clients'], 'Edit') %>

<h1>Edit client</h1>

<form method="post" action="/admin/clients/<%= client.id %>" class="" role="form">
  <input type="hidden" name="_method" value="patch">
  <% include fields %>
  <button type="submit" class="btn btn-primary">Save changes</button>
</form>

<hr>

<h2>Delete client</h2>

<div class="alert alert-warning">Warning: This will remove the client permanently.</div>

<form method="post" action="/admin/clients/<%= client.id %>" class="" role="form" onsubmit="return confirm('Are you sure you want to delete this client?')">
  <input type="hidden" name="_method" value="delete">
  <button type="submit" class="btn btn-warning"><i class="glyphicon glyphicon-trash"></i> Delete client</button>
</form>
